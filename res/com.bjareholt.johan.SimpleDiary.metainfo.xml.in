<?xml version="1.0" encoding="UTF-8"?>
<!-- Copyright 2020 Johan Bjäreholt -->
<component type="desktop-application">
    <id>@app_id@</id>
    <name>@name@</name>
    <summary>@summary@</summary>
    <url type="homepage">https://github.com/johan-bjareholt/simple-diary-gtk</url>
    <url type="bugtracker">https://github.com/johan-bjareholt/simple-diary-gtk/issues</url>


    <description>
        <p>Designed to be easy to use and be out of the way, to let you focus on documenting and reflecting over your daily life.</p>
        <p>A few notable features are:</p>
        <ul>
            <li>Saves entries in standard markdown</li>
            <li>Adding images to your entries</li>
            <li>Scales on desktops, laptops, tablets and phones</li>
            <li>Dark mode</li>
        </ul>
    </description>

    <categories>
        <category>Office</category>
    </categories>

    <launchable type="desktop-id">@app_id@.desktop</launchable>

    <screenshots>
        <screenshot>
            <caption>View of the list of diary entries</caption>
            <image>https://johan.bjareholt.com/img/projects/simple-diary/entry_view.png</image>
        </screenshot>
        <screenshot>
            <caption>View of the diary entry editor</caption>
            <image>https://johan.bjareholt.com/img/projects/simple-diary/entry_edit.png</image>
        </screenshot>
    </screenshots>

    <recommends>
        <control>pointing</control>
        <control>keyboard</control>
        <control>touch</control>
    </recommends>
    <requires>
        <display_length compare="ge">small</display_length>
    </requires>

    <developer_name>Johan Bjäreholt</developer_name>
    <update_contact>johan _AT_ bjareho.lt</update_contact>
    <project_license>GPL-3.0+</project_license>
    <metadata_license>MIT</metadata_license>
    <kudos>
        <kudo>AppMenu</kudo>
        <kudo>HighContrast</kudo>
        <kudo>ModernToolkit</kudo>
    </kudos>

    <content_rating type="oars-1.1"/>
    <releases>
        <release version="v0.4.6" date="2023-10-29">
            <description>
                <ul>
                    <li>Flatpak no longer needs read/write access to the whole home folder</li>
                </ul>
            </description>
        </release>

        <release version="v0.4.5" date="2023-10-28">
            <description>
                <ul>
                    <li>Minor UI improvements</li>
                    <li>Update flatpak runtime to Gnome 45</li>
                    <li>Rewrite dialogs that use code deprecated in GTK 4.10</li>
                </ul>
            </description>
        </release>

        <release version="v0.4.4" date="2022-11-06">
            <description>
                <ul>
                    <li>Fix crash when creating new entry</li>
                </ul>
            </description>
        </release>

        <release version="v0.4.3" date="2022-11-06">
            <description>
                <ul>
                    <li>Make flatpak use XDG dirs, to allow better security in the future</li>
                    <li>Minor UI improvements</li>
                </ul>
            </description>
        </release>
        <release version="v0.4.0" date="2022-01-13">
            <description>
                <ul>
                    <li>New "new entry" dialog with date selection</li>
                    <li>Improve dark mode setting</li>
                    <li>Add "About" dialog</li>
                </ul>
            </description>
        </release>
        <release version="v0.3.3" date="2022-01-05">
            <description>
                <ul>
                    <li>Improved rename and delete dialogs</li>
                    <li>Improved application metainfo</li>
                </ul>
            </description>
        </release>
        <release version="v0.3.2" date="2022-01-04">
            <description>
                <ul>
                    <li>Improved settings view</li>
                    <li>Change all icons to be symbolic for consistency</li>
                    <li>Start using libadwaita 1.0 and utilize it more</li>
                </ul>
            </description>
        </release>
        <release version="v0.3.1" date="2021-08-29">
            <description>
                <ul>
                    <li>Migrated from GTK3 to GTK4</li>
                    <li>Migrated from libhandy to libadwaita</li>
                    <li>Migrated from GtkWebKit to gtkmdview</li>
                    <li>Rewrote image picker</li>
                </ul>
            </description>
        </release>
        <release version="v0.2.0" date="2021-04-01">
            <description>
                <ul>
                    <li>Improved UI for desktop</li>
                    <li>Lots of bug fixes</li>
                </ul>
            </description>
        </release>
        <release version="v0.1.7" date="2021-01-24">
            <description>
                <ul>
                    <li>New icon</li>
                    <li>Improved dark mode</li>
                </ul>
            </description>
        </release>
        <release version="v0.1.6" date="2021-01-17">
            <description>
                <ul>
                    <li>Add SettingsView</li>
                    <li>Add DarkMode</li>
                </ul>
            </description>
        </release>
        <release version="v0.1.5" date="2021-01-10">
            <description>
                <p>Fix bug not properly deleting photos when deleting diary.</p>
            </description>
        </release>
        <release version="v0.1.4" date="2021-01-10">
            <description>
                <p>Improve interface for small formfactor devices.</p>
            </description>
        </release>
        <release version="v0.1.0" date="2021-01-06"/>
    </releases>
</component>
